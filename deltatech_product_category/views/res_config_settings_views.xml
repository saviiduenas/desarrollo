<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.product</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">


            <xpath expr="//div[@name='companies_setting_container']" position="inside">

                <div class="col-12 col-lg-6 o_setting_box" groups="base.group_no_one">
                    <div class="o_setting_left_pane">
                        <field name="company_share_product_category" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="company_share_product_category" />
                        <div class="text-muted">
                            Share your product category to all companies defined in your instance.
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>
